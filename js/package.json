    "test:bun": "bun test --timeout 60000 node.test",
    "test:all": "npm run test:node && npm run test:bun",
    "format": "prettier --write ."
  },
  "devDependencies": {
    "@playwright/test": "^1.49.1",
    "chai": "^5.1.2",
    "http-server": "^14.1.1",
    "mocha": "^11.0.1",
    "prettier": "^3.4.2"
  }
}
